@model IEnumerable<Book>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>@Html.DisplayNameFor(model => model.Author)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var book in Model)
        {
            <tr>
                <td>
                    <a asp-action="Detail" asp-route-id="@book.Id">@book.Title</a>
                </td>
                <td>@book.Author </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@book.Id" onclick="return confirm('Silmek istediğinizden emin misiniz?')"> Sil </a> |
                    Güncelle
                </td>
            </tr>
        }
        <!-- Butonunuz -->
        <button id="openModalBtn" class="btn btn-primary">Yeni Kitap Ekle</button>

        <!-- Modal -->
        <div id="myModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="Title" placeholder="Kitap Adı" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Author" placeholder="Yazar" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Description" placeholder="Açıklama">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="PageSize" placeholder="Sayfa Sayısı" required>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="Price" placeholder="Fiyat" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Kitap Ekle</button>
                </form>
            </div>
        </div>

        <script>
            // Modalı açan butonun click olayını dinleyelim
            document.getElementById("openModalBtn").onclick = function () {
                document.getElementById("myModal").style.display = "block";
            }

            // Kapatma düğmesine tıklama
            document.getElementsByClassName("close")[0].onclick = function () {
                document.getElementById("myModal").style.display = "none";
            }

            // Kullanıcı modaldışına tıklarsa kapat
            window.onclick = function (event) {
                if (event.target == document.getElementById("myModal")) {
                    document.getElementById("myModal").style.display = "none";
                }
            }
        </script>

        <table class="table">
    <!-- Tablo başlık ve içeriği -->
</table>

<style>
    /* Modal container */
    .modal {
        display: none; /* Modalı varsayılan olarak gizleyin */
        position: fixed; /* Modalı sabit bir konuma yerleştirin */
        z-index: 1; /* Modalın diğer içeriklerin üzerine gelmesini sağlayın */
        left: 0;
        top: 0;
        width: 100%; /* Genişlik 100% */
        height: 100%; /* Yükseklik 100% */
        overflow: auto; /* Sayfa içeriği boyutlandığında kaydırma çubuğunu etkinleştir */
        background-color: rgba(0,0,0,0.4); /* Arka plan rengi ve saydamlık */
        padding-top: 100px; /* Modal başlığına yer vermek için */
    }

    /* Modal içeriği */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%; /* İçeriğin genişliği */
    }

    /* Modal kapatma düğmesi */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>
</table>
